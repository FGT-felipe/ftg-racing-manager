rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default read for authenticated users, deny all writes by default
    match /{document=**} {
      allow read: if request.auth != null; 
      allow write: if false; 
    }
    
    // Managers: Owners only
    match /managers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users: Owners only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Teams: 
    // 1. Managers can manage their own teams.
    // 2. Allow broad update permissions for simulation results (e.g. updating qualy compound).
    match /teams/{teamId} {
      allow read: if request.auth != null;
      // Allow creation if unclaimed, update if owner OR for simulation purposes
      allow create: if request.auth != null; 
      allow update: if request.auth != null; 
          
      // Subcollections (transactions, notifications, practice_results)
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Drivers: Allow read/write for all authenticated users
    match /drivers/{driverId} {
      allow read, write: if request.auth != null;
    }

    // Transfer Bids: Allow read/write for all authenticated users
    match /transferBids/{bidId} {
      allow read, write: if request.auth != null;
    }

    // Leagues: Allow press_news additions (Press/News items)
    match /leagues/{leagueId} {
      allow read: if request.auth != null;
      match /press_news/{newsId} {
        allow read, write: if request.auth != null;
      }
    }

    // Races: Allow create/update for simulation results (Qualifying grids, Race results)
    match /races/{raceId} {
      allow read, write: if request.auth != null;
    }
    
    // Seasons: Allow updates for calendar progress
    match /seasons/{seasonId} {
      allow read, write: if request.auth != null;
    }

    // Universe: Static data, read-only
    match /universe/{uniId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}